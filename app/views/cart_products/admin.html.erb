<% content_for :title, "Admin - Produits du panier" %>

<h1 class="mb-4">Produits de panier (administration)</h1>

<% if notice.present? %>
  <div class="alert alert-success"><%= notice %></div>
<% end %>

<% if @cart_products.any? %>
  <div class="table-responsive">
    <table class="table table-striped table-hover align-middle">
      <thead>
        <tr>
          <th>ID</th>
          <th>Panier</th>
          <th>Produit</th>
          <th class="text-end">Quantité</th>
          <th class="text-end">Prix unitaire</th>
          <th class="text-end">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @cart_products.each do |cart_product| %>
          <tr id="<%= dom_id(cart_product) %>">
            <td><%= cart_product.id %></td>
            <td><%= cart_product.cart_id %></td>
            <td><%= cart_product.product_id %></td>
            <td class="text-end"><%= cart_product.quantity %></td>
            <td class="text-end"><%= cart_product.unit_price.present? ? number_to_currency(cart_product.unit_price, unit: "€") : "—" %></td>
            <td class="text-end">
              <div class="btn-group btn-group-sm" role="group">
                <%= link_to "Modifier", edit_cart_product_path(cart_product), class: "btn btn-primary" %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <p class="text-muted">Aucun produit de panier.</p>
<% end %>

<div class="d-flex justify-content-end mt-3">
  <%= link_to "Ajouter un produit de panier", new_cart_product_path, class: "btn btn-success" %>
</div>
