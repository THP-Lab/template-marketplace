<div class="container py-4 d-flex justify-content-center mt-5">
  <div class="card card-form p-4">
    <h2 class="text-center mb-2">Bienvenue</h2>
    <p class="text-center mb-2"><strong>Accédez à votre compte artisan</strong></p>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mt-2">
        <%= f.label :email, "Adresse e-mail" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="mt-2">
        <%= f.label :password, "Mot de passe" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me,  "Se souvenir de moi" %>
        </div>
      <% end %>

      <div class="d-flex justify-content-center mt-3">
        <%= f.submit "Se connecter", class:"btn btn-primary" %>
      </div>
    <% end %>

    <div class="text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
