<% content_for :title, "Admin - Modifier une page de confidentialité" %>

<%= admin_page(title: "Modifier une page de confidentialité") do %>
  <%= render "form", privacy_page: @privacy_page %>

  <div class="mt-3 d-flex gap-2">
    <%= link_to "Voir la page", @privacy_page, class: "btn btn-outline-secondary btn-sm" %>
    <%= link_to "Retour aux pages de confidentialité", admin_privacy_pages_path, class: "btn btn-outline-secondary btn-sm" %>
    <%= button_to "Supprimer", @privacy_page, method: :delete, data: { confirm: "Supprimer cette page de confidentialité ?" }, class: "btn btn-danger btn-sm" %>
  </div>
<% end %>
