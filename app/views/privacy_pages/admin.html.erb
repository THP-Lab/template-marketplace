<% content_for :title, "Admin - Confidentialité" %>

<div class="container py-4">
  <div class="row g-4">
    <div class="col-lg-4 col-xl-3">
      <%= render_admin_sidebar %>
    </div>
    <div class="col-lg-8 col-xl-9">
      <h1 class="mb-4">Pages de confidentialité (administration)</h1>

      <% if notice.present? %>
        <div class="alert alert-success"><%= notice %></div>
      <% end %>

      <% if @privacy_pages.any? %>
        <div class="table-responsive">
          <table class="table table-striped table-hover align-middle">
            <thead>
              <tr>
                <th>ID</th>
                <th>Titre</th>
                <th>Position</th>
                <th>Contenu</th>
                <th class="text-end">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @privacy_pages.each do |privacy_page| %>
                <tr id="<%= dom_id(privacy_page) %>">
                  <td><%= privacy_page.id %></td>
                  <td><%= privacy_page.title %></td>
                  <td><%= privacy_page.position %></td>
                  <td><%= truncate(privacy_page.content.to_s, length: 100) %></td>
                  <td class="text-end">
                    <div class="btn-group btn-group-sm" role="group">
                      <%= link_to "Modifier", edit_privacy_page_path(privacy_page), class: "btn btn-primary" %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <p class="text-muted">Aucune page de confidentialité.</p>
      <% end %>

      <div class="d-flex justify-content-end mt-3">
        <%= link_to "Nouvelle page de confidentialité", new_privacy_page_path, class: "btn btn-success" %>
      </div>
    </div>
  </div>
</div>
