<% content_for :title, "Admin - Commandes" %>

<div class="container py-4">
  <div class="row g-4">
    <div class="col-lg-4 col-xl-3">
      <%= render_admin_sidebar %>
    </div>
    <div class="col-lg-8 col-xl-9">
      <h1 class="mb-4">Commandes (administration)</h1>

      <% if notice.present? %>
        <div class="alert alert-success"><%= notice %></div>
      <% end %>

      <% if @orders.any? %>
        <div class="table-responsive">
          <table class="table table-striped table-hover align-middle">
            <thead>
              <tr>
                <th>ID</th>
                <th>Utilisateur</th>
                <th>Date</th>
                <th class="text-end">Montant</th>
                <th>Statut / Suivi</th>
                <th class="text-end">Actions</th>
              </tr>
            </thead>
            <% @orders.each do |order| %>
              <tbody data-controller="toggle-details">
                <tr id="<%= dom_id(order) %>">
                  <td><%= order.id %></td>
                  <td><%= order.user.present? ? mask_email(order.user.email) : "‚Äî" %></td>
                  <td><%= order.order_date.present? ? l(order.order_date, format: "%d/%m/%Y") : "‚Äî" %></td>
                  <td class="text-end"><%= order.total_amount.present? ? number_to_currency(order.total_amount, unit: "‚Ç¨") : "‚Äî" %></td>
                  <td>
                    <%= form_with(model: order,
                                  url: order_path(order),
                                  method: :patch,
                                  data: { controller: "auto-submit" },
                                  html: { class: "d-flex flex-column gap-2" }) do |f| %>
                      <%= hidden_field_tag :redirect_to, admin_orders_path(page: @pagination&.dig(:page) || params[:page]) %>
                      <%= f.select :status,
                                   options_for_select(order_status_options, order.status),
                                   {},
                                   class: "form-select form-select-sm",
                                   data: { action: "change->auto-submit#handle" } %>
                      <div class="d-flex align-items-center gap-2">
                        <%= f.text_field :tracking_number,
                                         value: order.tracking_number,
                                         class: "form-control form-control-sm",
                                         placeholder: "Num√©ro de suivi",
                                         data: { action: "input->auto-submit#handle change->auto-submit#handle" } %>
                        <% if order.tracking_number.present? %>
                          <span class="text-muted small">Envoy√© dans l'email</span>
                        <% end %>
                      </div>
                    <% end %>
                  </td>
                  <td class="text-end">
                    <div class="btn-group btn-group-sm" role="group">
                      <%= link_to "Voir", order_path(order), class: "btn btn-outline-secondary" %>
                      <%= link_to "Modifier", edit_order_path(order), class: "btn btn-primary" %>
                      <button class="btn btn-outline-secondary" data-action="toggle-details#toggle" type="button" title="Voir les informations utilisateur">üëÅÔ∏è</button>
                    </div>
                  </td>
                </tr>
                <tr class="d-none" data-toggle-details-target="details">
                  <td colspan="6">
                    <% if order.user.present? %>
                      <div class="small text-muted">
                        Email : <%= order.user.email %> |
                        Pr√©nom : <%= order.user.first_name.presence || "‚Äî" %> |
                        Nom : <%= order.user.last_name.presence || "‚Äî" %> |
                        ID utilisateur : <%= order.user.id %>
                      </div>
                    <% else %>
                      <div class="small text-muted">Utilisateur introuvable</div>
                    <% end %>
                  </td>
                </tr>
              </tbody>
            <% end %>
          </table>
        </div>
      <% else %>
        <p class="text-muted">Aucune commande.</p>
      <% end %>

      <div class="d-flex justify-content-end mt-3">
        <%= link_to "Cr√©er une commande", new_order_path, class: "btn btn-success" %>
      </div>
      <%= admin_pagination(@pagination) %>
    </div>
  </div>
</div>
