<% content_for :title, "Admin - Commandes" %>

<div class="container py-4">
  <div class="row g-4">
    <div class="col-lg-4 col-xl-3">
      <%= render_admin_sidebar %>
    </div>
    <div class="col-lg-8 col-xl-9">
      <h1 class="mb-4">Commandes (administration)</h1>

      <% if notice.present? %>
        <div class="alert alert-success"><%= notice %></div>
      <% end %>

      <% if @orders.any? %>
        <div class="table-responsive">
          <table class="table table-striped table-hover align-middle">
            <thead>
              <tr>
                <th>ID</th>
                <th>Utilisateur</th>
                <th>Date</th>
                <th class="text-end">Montant</th>
                <th>Statut</th>
                <th class="text-end">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @orders.each do |order| %>
                <tr id="<%= dom_id(order) %>">
                  <td><%= order.id %></td>
                  <td><%= order.user_id %></td>
                  <td><%= order.order_date.present? ? l(order.order_date, format: :short) : "—" %></td>
                  <td class="text-end"><%= order.total_amount.present? ? number_to_currency(order.total_amount, unit: "€") : "—" %></td>
                  <td><%= order.status %></td>
                  <td class="text-end">
                    <div class="btn-group btn-group-sm" role="group">
                      <%= link_to "Voir", order_path(order), class: "btn btn-outline-secondary" %>
                      <%= link_to "Modifier", edit_order_path(order), class: "btn btn-primary" %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <p class="text-muted">Aucune commande.</p>
      <% end %>

      <div class="d-flex justify-content-end mt-3">
        <%= link_to "Créer une commande", new_order_path, class: "btn btn-success" %>
      </div>
      <%= admin_pagination(@pagination) %>
    </div>
  </div>
</div>
