<%= form_with(model: order) do |form| %>
  <% if order.errors.any? %>
    <div class="alert alert-danger">
      <h2 class="h6 mb-2"><%= pluralize(order.errors.count, "erreur") %> empêchent l’enregistrement :</h2>
      <ul class="mb-0">
        <% order.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :user_id, "Utilisateur", class: "form-label" %>
    <%= form.number_field :user_id, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :order_date, "Date de commande", class: "form-label" %>
    <%= form.datetime_field :order_date, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :total_amount, "Montant total", class: "form-label" %>
    <%= form.number_field :total_amount, step: 0.01, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :status, "Statut", class: "form-label" %>
    <%= form.select :status, options_for_select(order_status_options, order.status), {}, class: "form-select" %>
  </div>

  <div class="mb-3">
    <%= form.label :tracking_number, "Numéro de suivi", class: "form-label" %>
    <%= form.text_field :tracking_number, class: "form-control", placeholder: "Ex: TRK-123456789" %>
  </div>

  <div class="d-flex gap-2">
    <%= form.submit "Enregistrer", class: "btn btn-primary" %>
  </div>
<% end %>
