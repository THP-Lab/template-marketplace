<% content_for :title, "Admin - Modifier une page légale" %>

<%= admin_page(title: "Modifier une page légale") do %>
  <%= render "form", terms_page: @terms_page %>

  <div class="mt-3 d-flex gap-2">
    <%= link_to "Voir la page", @terms_page, class: "btn btn-outline-secondary btn-sm" %>
    <%= link_to "Retour aux pages légales", admin_terms_pages_path, class: "btn btn-outline-secondary btn-sm" %>
    <%= button_to "Supprimer", @terms_page, method: :delete, data: { confirm: "Supprimer cette page légale ?" }, class: "btn btn-danger btn-sm" %>
  </div>
<% end %>
