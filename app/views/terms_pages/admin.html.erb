<% content_for :title, "Admin - CGV / CGU" %>

<div class="container py-4">
  <div class="row g-4">
    <div class="col-lg-4 col-xl-3">
      <%= render_admin_sidebar %>
    </div>
    <div class="col-lg-8 col-xl-9">
      <h1 class="mb-4">Pages légales (administration)</h1>

      <% if notice.present? %>
        <div class="alert alert-success"><%= notice %></div>
      <% end %>

      <% if @terms_pages.any? %>
        <div class="table-responsive">
          <table class="table table-striped table-hover align-middle"
                 data-controller="reorder"
                 data-reorder-url-value="<%= reorder_terms_pages_path %>">
            <thead>
              <tr>
                <th>ID</th>
                <th>Titre</th>
                <th>Contenu</th>
                <th class="text-end">Actions</th>
                <th class="text-end" style="width: 40px;"></th>
              </tr>
            </thead>
            <tbody>
              <% @terms_pages.each do |terms_page| %>
                <tr id="<%= dom_id(terms_page) %>"
                    data-reorder-target="item"
                    data-id="<%= terms_page.id %>">
                  <td><%= terms_page.id %></td>
                  <td><%= terms_page.title %></td>
                  <td><%= truncate(terms_page.content.to_s, length: 100) %></td>
                  <td class="text-end">
                    <div class="btn-group btn-group-sm" role="group">
                      <%= link_to "Modifier", edit_terms_page_path(terms_page), class: "btn btn-primary" %>
                    </div>
                  </td>
                  <td class="text-end text-muted" style="width: 40px;">
                    <span class="reorder-handle" title="Déplacer">&#8942;</span>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <p class="text-muted">Aucune page légale.</p>
      <% end %>

      <div class="d-flex justify-content-end mt-3">
        <%= link_to "Ajouter une section", new_terms_page_path, class: "btn btn-success" %>
      </div>
      <%= admin_pagination(@pagination) %>
    </div>
  </div>
</div>
