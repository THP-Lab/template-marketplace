<% content_for :title, "Admin - Utilisateurs" %>

<div class="container py-4">
  <div class="row g-4">
    <div class="col-lg-4 col-xl-3">
      <%= render_admin_sidebar %>
    </div>
    <div class="col-lg-8 col-xl-9">
      <h1 class="mb-4">Utilisateurs</h1>

      <% if notice.present? %>
        <div class="alert alert-success"><%= notice %></div>
      <% end %>

      <% if @users.any? %>
        <div class="table-responsive">
          <table class="table table-striped table-hover align-middle">
            <thead>
              <tr>
                <th>ID</th>
                <th>Email</th>
                <th>Nom</th>
                <th>Cr√©√© le</th>
                <th class="text-end">Actions</th>
              </tr>
            </thead>
            <% @users.each do |user| %>
              <tbody data-controller="toggle-details">
                <tr>
                  <td><%= user.id %></td>
                  <td><%= mask_email(user.email) %></td>
                  <td><%= mask_name(user.first_name, user.last_name) %></td>
                  <td><%= l(user.created_at, format: :short) %></td>
                  <td class="text-end">
                    <div class="btn-group btn-group-sm" role="group">
                      <%= link_to "Modifier", edit_user_path(user), class: "btn btn-primary" %>
                      <%= button_to "Supprimer", user_path(user), method: :delete, data: { confirm: "Supprimer ce compte ?" }, class: "btn btn-danger" %>
                      <button class="btn btn-outline-secondary" data-action="toggle-details#toggle" type="button">üëÅÔ∏è</button>
                    </div>
                  </td>
                </tr>
                <tr class="d-none" data-toggle-details-target="details">
                  <td colspan="5">
                    <div class="small text-muted">
                      <strong>Email:</strong> <%= user.email %> |
                      <strong>Pr√©nom:</strong> <%= user.first_name.presence || "‚Äî" %> |
                      <strong>Nom:</strong> <%= user.last_name.presence || "‚Äî" %> |
                      <strong>Adresse:</strong> <%= user.address.presence || "‚Äî" %> |
                      <strong>CP:</strong> <%= user.zipcode.presence || "‚Äî" %> |
                      <strong>Ville:</strong> <%= user.city.presence || "‚Äî" %> |
                      <strong>Pays:</strong> <%= user.country.presence || "‚Äî" %> |
                      <strong>T√©l:</strong> <%= user.phone.presence || "‚Äî" %>
                    </div>
                  </td>
                </tr>
              </tbody>
            <% end %>
          </table>
          <%= admin_pagination(@pagination) %>
        </div>
      <% else %>
        <p class="text-muted">Aucun utilisateur.</p>
      <% end %>
    </div>
  </div>
</div>
