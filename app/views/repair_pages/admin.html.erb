<% content_for :title, "Admin - Réparation" %>

<div class="container py-4">
  <div class="row g-4">
    <div class="col-lg-4 col-xl-3">
      <%= render_admin_sidebar %>
    </div>
    <div class="col-lg-8 col-xl-9">
      <h1 class="mb-4">Pages réparation (administration)</h1>

      <% if notice.present? %>
        <div class="alert alert-success"><%= notice %></div>
      <% end %>

      <% if @repair_pages.any? %>
        <div class="table-responsive">
          <table class="table table-striped table-hover align-middle"
                 data-controller="reorder"
                 data-reorder-url-value="<%= reorder_repair_pages_path %>">
            <thead>
              <tr>
                <th>ID</th>
                <th>Image</th>
                <th>Titre</th>
                <th>Position</th>
                <th>Contenu</th>
                <th class="text-end">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @repair_pages.each do |repair_page| %>
                <tr id="<%= dom_id(repair_page) %>"
                    data-reorder-target="item"
                    data-id="<%= repair_page.id %>">
                  <td><%= repair_page.id %></td>
                  <td>
                    <%= attachment_thumb(repair_page.image, variant_options: { resize_to_limit: [80, 80] }, class: "img-thumbnail") || content_tag(:span, "—", class: "text-muted") %>
                  </td>
                  <td><%= repair_page.title %></td>
                  <td data-position-cell><%= repair_page.position %></td>
                  <td><%= truncate(repair_page.content.to_s, length: 100) %></td>
                  <td class="text-end">
                    <div class="btn-group btn-group-sm" role="group">
                      <%= link_to "Modifier", edit_repair_page_path(repair_page), class: "btn btn-primary" %>
                    </div>
                  </td>
                  <td class="text-end text-muted" style="width: 40px;">
                    <span class="reorder-handle" title="Déplacer">&#8942;</span>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <p class="text-muted">Aucune page de réparation.</p>
      <% end %>

      <div class="d-flex justify-content-end mt-3">
        <%= link_to "Nouvelle page réparation", new_repair_page_path, class: "btn btn-success" %>
      </div>
      <%= admin_pagination(@pagination) %>
    </div>
  </div>
</div>
