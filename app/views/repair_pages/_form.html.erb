<%= form_with(model: repair_page) do |form| %>
  <% if repair_page.errors.any? %>
    <div class="alert alert-danger">
      <h2 class="h6 mb-2"><%= pluralize(repair_page.errors.count, "erreur") %> empêchent l’enregistrement :</h2>
      <ul class="mb-0">
        <% repair_page.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :title, "Titre", class: "form-label" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :content, "Contenu", class: "form-label" %>
    <%= form.text_area :content, class: "form-control", rows: 4 %>
  </div>

  <div class="mb-3">
    <%= form.label :position, "Position", class: "form-label" %>
    <%= form.number_field :position, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :image, "Image", class: "form-label" %>
    <%= form.file_field :image, class: "form-control" %>
    <% if repair_page.image.attached? %>
      <div class="mt-2">
        <%= attachment_thumb(repair_page.image, variant_options: { resize_to_limit: [200, 200] }, class: "img-thumbnail") %>
      </div>
    <% end %>
  </div>

  <div class="d-flex gap-2">
    <%= form.submit "Enregistrer", class: "btn btn-primary" %>
  </div>
<% end %>
