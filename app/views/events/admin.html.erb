<% content_for :title, "Admin - Événements" %>

<div class="container py-4">
  <div class="row g-4">
    <div class="col-lg-4 col-xl-3">
      <%= render_admin_sidebar %>
    </div>
    <div class="col-lg-8 col-xl-9">
      <h1 class="mb-4">Événements (administration)</h1>

      <% if notice.present? %>
        <div class="alert alert-success"><%= notice %></div>
      <% end %>

      <% if @events.any? %>
        <div class="table-responsive">
          <table class="table table-striped table-hover align-middle">
            <thead>
              <tr>
                <th>ID</th>
                <th>Image</th>
                <th>Titre</th>
                <th>Catégorie</th>
                <th>Date</th>
                <th>Lieu</th>
                <th class="text-end">Actions</th>
              </tr>
            </thead>
            <tbody>
            <% @events.each do |event| %>
              <tr id="<%= dom_id(event) %>">
                <td><%= event.id %></td>
                <td>
                  <%= attachment_thumb(event.image, variant_options: { resize_to_limit: [80, 80] }, class: "img-thumbnail") || content_tag(:span, "—", class: "text-muted") %>
                </td>
                <td><%= event.title %></td>
                <td><%= event.category.presence || "—" %></td>
                  <td><%= event.event_date.present? ? l(event.event_date, format: :short) : "—" %></td>
                  <td><%= event.location.presence || "—" %></td>
                  <td class="text-end">
                    <div class="btn-group btn-group-sm" role="group">
                      <%= link_to "Voir", event_path(event), class: "btn btn-outline-secondary" %>
                      <%= link_to "Modifier", edit_event_path(event), class: "btn btn-primary" %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <p class="text-muted">Aucun événement.</p>
      <% end %>

      <div class="d-flex justify-content-end mt-3">
        <%= link_to "Créer un événement", new_event_path, class: "btn btn-success" %>
      </div>
      <%= admin_pagination(@pagination) %>
    </div>
  </div>
</div>
