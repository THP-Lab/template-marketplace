<%= form_with(model: event) do |form| %>
  <% if event.errors.any? %>
    <div class="alert alert-danger">
      <h2 class="h6 mb-2"><%= pluralize(event.errors.count, "erreur") %> empêchent l’enregistrement :</h2>
      <ul class="mb-0">
        <% event.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :user_id, "Utilisateur", class: "form-label" %>
    <%= form.number_field :user_id, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :title, "Titre", class: "form-label" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :category, "Catégorie", class: "form-label" %>
    <%= form.text_field :category, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :description, class: "form-label" %>
    <%= form.text_area :description, class: "form-control", rows: 4 %>
  </div>

  <div class="mb-3">
    <%= form.label :event_date, "Date de l’événement", class: "form-label" %>
    <%= form.datetime_field :event_date, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :location, "Lieu", class: "form-label" %>
    <%= form.text_field :location, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :image, "Image", class: "form-label" %>
    <%= form.file_field :image, class: "form-control" %>
    <% if event.image.attached? %>
      <div class="mt-2">
        <%= attachment_thumb(event.image, variant_options: { resize_to_limit: [200, 200] }, class: "img-thumbnail") %>
      </div>
    <% end %>
  </div>

  <div class="d-flex gap-2">
    <%= form.submit "Enregistrer", class: "btn btn-primary" %>
  </div>
<% end %>
