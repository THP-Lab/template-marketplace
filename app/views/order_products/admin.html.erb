<% content_for :title, "Admin - Produits de commande" %>

<h1 class="mb-4">Produits de commande (administration)</h1>

<% if notice.present? %>
  <div class="alert alert-success"><%= notice %></div>
<% end %>

<% if @order_products.any? %>
  <div class="table-responsive">
    <table class="table table-striped table-hover align-middle">
      <thead>
        <tr>
          <th>ID</th>
          <th>Commande</th>
          <th>Produit</th>
          <th class="text-end">Quantité</th>
          <th class="text-end">Prix unitaire</th>
          <th class="text-end">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @order_products.each do |order_product| %>
          <tr id="<%= dom_id(order_product) %>">
            <td><%= order_product.id %></td>
            <td><%= order_product.order_id %></td>
            <td><%= order_product.product_id %></td>
            <td class="text-end"><%= order_product.quantity %></td>
            <td class="text-end"><%= order_product.unit_price.present? ? number_to_currency(order_product.unit_price, unit: "€") : "—" %></td>
            <td class="text-end">
              <div class="btn-group btn-group-sm" role="group">
                <%= link_to "Voir", order_product_path(order_product), class: "btn btn-outline-secondary" %>
                <%= link_to "Modifier", edit_order_product_path(order_product), class: "btn btn-primary" %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <p class="text-muted">Aucun produit de commande.</p>
<% end %>

<div class="d-flex justify-content-end mt-3">
  <%= link_to "Ajouter un produit de commande", new_order_product_path, class: "btn btn-success" %>
</div>
