<% content_for :title, "Admin - Informations légales" %>

<div class="container py-4">
  <div class="row g-4">
    <div class="col-lg-4 col-xl-3">
      <%= render_admin_sidebar %>
    </div>
    <div class="col-lg-8 col-xl-9">
      <h1 class="mb-4">Informations pour facturation</h1>

      <% if notice.present? %>
        <div class="alert alert-success"><%= notice %></div>
      <% end %>
      <% if alert.present? %>
        <div class="alert alert-danger"><%= alert %></div>
      <% end %>

      <div class="card shadow-sm">
        <div class="card-body">
          <p class="text-muted small mb-4">
            Ces informations seront utilisées pour générer les factures PDF (paiement Stripe).
          </p>
          <%= form_with model: @company_information,
                        url: company_information_path,
                        method: :patch,
                        local: true do |f| %>
            <div class="row g-3">
              <div class="col-12">
                <%= f.label :legal_name, "Dénomination sociale", class: "form-label" %>
                <%= f.text_field :legal_name, class: "form-control" %>
              </div>

              <div class="col-12 col-md-6">
                <%= f.label :address_line1, "Adresse (ligne 1)", class: "form-label" %>
                <%= f.text_field :address_line1, class: "form-control" %>
              </div>
              <div class="col-12 col-md-6">
                <%= f.label :address_line2, "Adresse (ligne 2)", class: "form-label" %>
                <%= f.text_field :address_line2, class: "form-control" %>
              </div>

              <div class="col-6 col-md-3">
                <%= f.label :zipcode, "Code postal", class: "form-label" %>
                <%= f.text_field :zipcode, class: "form-control" %>
              </div>
              <div class="col-6 col-md-3">
                <%= f.label :city, "Ville", class: "form-label" %>
                <%= f.text_field :city, class: "form-control" %>
              </div>
              <div class="col-12 col-md-6">
                <%= f.label :country, "Pays", class: "form-label" %>
                <%= f.text_field :country, class: "form-control" %>
              </div>

              <div class="col-12 col-md-6">
                <%= f.label :siret, "SIRET / SIREN", class: "form-label" %>
                <%= f.text_field :siret, class: "form-control" %>
              </div>
              <div class="col-12 col-md-6">
                <%= f.label :vat_number, "Numéro de TVA", class: "form-label" %>
                <%= f.text_field :vat_number, class: "form-control" %>
              </div>

              <div class="col-12 col-md-6">
                <%= f.label :phone, "Téléphone", class: "form-label" %>
                <%= f.text_field :phone, class: "form-control" %>
              </div>
              <div class="col-12 col-md-6">
                <%= f.label :email, "Email de contact", class: "form-label" %>
                <%= f.email_field :email, class: "form-control" %>
              </div>

              <div class="col-12">
                <%= f.label :additional_info, "Informations complémentaires (mentions légales, conditions de paiement, etc.)", class: "form-label" %>
                <%= f.text_area :additional_info, class: "form-control", rows: 3 %>
              </div>
            </div>

            <div class="mt-4 d-flex justify-content-end">
              <%= f.submit "Enregistrer", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
