<% content_for :title, "Admin - Modifier un produit" %>

<%= admin_page(title: "Modifier un produit") do %>
  <%= render "form", product: @product %>

  <div class="mt-3 d-flex gap-2">
    <%= link_to "Voir le produit", @product, class: "btn btn-outline-secondary btn-sm" %>
    <%= link_to "Retour aux produits", admin_products_path, class: "btn btn-outline-secondary btn-sm" %>
    <%= button_to "Supprimer", @product, method: :delete, data: { confirm: "Supprimer ce produit ?" }, class: "btn btn-danger btn-sm" %>
  </div>
<% end %>
