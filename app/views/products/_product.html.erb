      <%= image_tag product.image, alt: product.title %>
    </div>
  <% end %>

  <div class="p-2">
    <div class="gold">
      <p><strong><%= product.category %></strong></p>
    </div>

    <div>
      <h5><%= product.title %></h5>
    </div>

    <div>
      <p><%= product.description %></p>
    </div>

    <div>
      <h5 class="gold"><%= number_to_currency(product.price, unit: "â‚¬", format: "%n %u") %></h5>
    </div>

