
<% content_for :title, "Admin - Produits" %>

<div class="container py-4">
  <div class="row g-4">
    <div class="col-lg-4 col-xl-3">
      <%= render_admin_sidebar %>
    </div>
    <div class="col-lg-8 col-xl-9">
      <h1 class="mb-4">Produits (administration)</h1>

      <% if notice.present? %>
        <div class="alert alert-success"><%= notice %></div>
      <% end %>

      <% if @products.any? %>
        <div class="table-responsive">
          <table class="table table-striped table-hover align-middle">
            <thead>
              <tr>
                <th>ID</th>
                <th>Titre</th>
                <th>Catégorie</th>
                <th class="text-end">Prix</th>
                <th class="text-end">Stock</th>
                <th class="text-end">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @products.each do |product| %>
                <tr id="<%= dom_id(product) %>">
                  <td><%= product.id %></td>
                  <td><%= product.title %></td>
                  <td><%= product.category.presence || "—" %></td>
                  <td class="text-end"><%= product.price.present? ? number_to_currency(product.price, unit: "€") : "—" %></td>
                  <td class="text-end">
                    <%= form_with(model: product,
                                  url: product_path(product),
                                  method: :patch,
                                  data: { controller: "auto-submit" },
                                  html: { class: "d-flex justify-content-end align-items-center gap-2" }) do |f| %>
                      <%= hidden_field_tag :redirect_to, admin_products_path(page: @pagination&.dig(:page) || params[:page]) %>
                      <%= f.number_field :stock,
                                          value: product.stock,
                                          class: "form-control form-control-sm text-end",
                                          style: "width: 90px;",
                                          min: 0,
                                          data: { action: "input->auto-submit#handle change->auto-submit#handle" } %>
                    <% end %>
                  </td>
                  <td class="text-end">
                    <div class="btn-group btn-group-sm" role="group">
                      <%= link_to "Voir", product_path(product), class: "btn btn-outline-secondary" %>
                      <%= link_to "Modifier", edit_product_path(product), class: "btn btn-primary" %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <p class="text-muted">Aucun produit trouvé.</p>
      <% end %>

      <div class="d-flex justify-content-end mt-3">
        <%= link_to "Créer un produit", new_product_path, class: "btn btn-success" %>
      </div>
      <%= admin_pagination(@pagination) %>
    </div>
  </div>
</div>
