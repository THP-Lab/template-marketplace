<% content_for :title, "Admin - Modifier une section À propos" %>

<%= admin_page(title: "Modifier une section À propos") do %>
  <%= render "form", about_page: @about_page %>

  <div class="mt-3 d-flex gap-2">
    <%= link_to "Voir la section", @about_page, class: "btn btn-outline-secondary btn-sm" %>
    <%= link_to "Retour aux sections", admin_about_pages_path, class: "btn btn-outline-secondary btn-sm" %>
    <%= button_to "Supprimer", @about_page, method: :delete, data: { confirm: "Supprimer cette section ?" }, class: "btn btn-danger btn-sm" %>
  </div>
<% end %>
