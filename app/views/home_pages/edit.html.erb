<% content_for :title, "Admin - Modifier un bloc d’accueil" %>

<%= admin_page(title: "Modifier un bloc d’accueil") do %>
  <%= render "form", home_page: @home_page %>

  <div class="mt-3 d-flex gap-2">
    <%= link_to "Voir la home page", home_pages_path, class: "btn btn-outline-secondary btn-sm" %>
    <%= link_to "Retour aux blocs", admin_home_pages_path, class: "btn btn-outline-secondary btn-sm" %>
    <%= button_to "Supprimer", @home_page, method: :delete, data: { confirm: "Supprimer ce bloc d’accueil ?" }, class: "btn btn-danger btn-sm" %>
  </div>
<% end %>
