<% content_for :title, "Admin - Accueil" %>

<div class="container py-4">
  <div class="row g-4">
    <div class="col-lg-4 col-xl-3">
      <%= render_admin_sidebar %>
    </div>
    <div class="col-lg-8 col-xl-9">
      <h1 class="mb-4">Blocs d’accueil (administration)</h1>

      <% if notice.present? %>
        <div class="alert alert-success"><%= notice %></div>
      <% end %>

      <% if @home_pages.any? %>
        <div class="table-responsive">
          <table class="table table-striped table-hover align-middle">
            <thead>
              <tr>
                <th>ID</th>
                <th>Titre</th>
                <th>Type</th>
                <th>Source / portée</th>
                <th>Position</th>
                <th>Contenu</th>
                <th class="text-end">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @home_pages.each do |home_page| %>
                <% target_label =
                     case home_page.bloc_type
                     when "about" then "Bloc À propos ##{home_page.target_id}"
                     when "repair" then "Bloc Réparation ##{home_page.target_id}"
                     when "shop"
                       case home_page.shop_scope
                       when "first" then "Boutique - 5 premiers"
                       when "last" then "Boutique - 5 derniers"
                       else "Boutique - 5 plus achetés"
                       end
                     else
                       "Bloc personnalisé"
                     end
                %>
                <tr id="<%= dom_id(home_page) %>">
                  <td><%= home_page.id %></td>
                  <td><%= home_page.title %></td>
                  <td><%= home_page.bloc_type %></td>
                  <td><%= target_label %></td>
                  <td><%= home_page.position %></td>
                  <td><%= truncate(home_page.content.to_s, length: 100) %></td>
                  <td class="text-end">
                    <div class="btn-group btn-group-sm" role="group">
                      <%= link_to "Modifier", edit_home_page_path(home_page), class: "btn btn-primary" %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <p class="text-muted">Aucun bloc d’accueil.</p>
      <% end %>

      <div class="d-flex justify-content-end mt-3">
        <%= link_to "Ajouter un bloc d’accueil", new_home_page_path, class: "btn btn-success" %>
      </div>
    </div>
  </div>
</div>
