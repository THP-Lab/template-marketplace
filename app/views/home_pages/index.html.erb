<% content_for :title, "Accueil" %>

<section>
  <% if @featured_products.any? %>
    <div>
      <h1>Produits à découvrir</h1>
      <%= link_to "continuer sur la boutique", products_path %>
    </div>

    <div id="home-featured-products">
      <% @featured_products.each do |product| %>
        <div>
          <h5><%= product.title %></h5>
          <% if product.description.present? %>
            <p><%= truncate(product.description, length: 140) %></p>
          <% else %>
            <div></div>
          <% end %>
          <% if product.price.present? %>
            <p><%= number_to_currency(product.price, unit: "€") %></p>
          <% end %>
          <%= link_to "Voir le produit", product_path(product) %>
        </div>
      <% end %>
    </div>
  <% else %>
    <div>
      <%= link_to "continuer sur la boutique", products_path %>
    </div>
  <% end %>
</section>
